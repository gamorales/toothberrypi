<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDevice"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/tips_list_inside_padding"
    app:cardElevation="@dimen/tips_list_inside_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispositivo 1"
                android:textSize="26sp"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/tvDeviceMAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25:CD:A5:F8:C3:00"
                android:textSize="15sp"
                android:paddingStart="12dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivDeviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/connected"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp" />

        <View
            android:id="@+id/vDeviceBottomColor"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#77F077"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>